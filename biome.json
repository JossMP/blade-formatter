{
	"$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
	"linter": {
		"includes": ["**/*.ts", "src/**", "__tests__/**"],
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
      "complexity": {
        "noUselessEscapeInRegex": "off"
      }
		}
	},
	"formatter": {
		"includes": ["src/**", "__tests__/**"]
	}
}
